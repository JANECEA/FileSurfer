<Styles xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="Button.TopLeftButton">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
    </Style>

    <Style Selector="TextBox.TopTextBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style Selector="Button.FileOperationButton">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
    </Style>

    <Style Selector="Rectangle.ButtonSeparator">
        <Setter Property="Height" Value="39"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Fill" Value="{StaticResource SecondaryColor}"/>
        <Setter Property="Margin" Value="5 0 15 0"/>
    </Style>

    <Style Selector="Button.GitButton">
        <Setter Property="FontSize" Value="10"/> 
        <Setter Property="DockPanel.Dock" Value="Right"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

</Styles>