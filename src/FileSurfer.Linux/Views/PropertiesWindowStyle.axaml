<Styles xmlns="https://github.com/avaloniaui">

    <!--  Window  -->
    <Style Selector="Window.properties-window">
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!--  Header  -->
    <Style Selector="TextBlock.properties-header">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <!--  Filename section  -->
    <Style Selector="Grid.filename-section">
        <Setter Property="ColumnSpacing" Value="12" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style Selector="TextBlock.filename-value">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!--  Properties grid  -->
    <Style Selector="Grid.properties-grid">
        <Setter Property="ColumnSpacing" Value="16" />
        <Setter Property="RowSpacing" Value="10" />
        <Setter Property="Margin" Value="0,12,0,12" />
    </Style>

    <!--  Labels  -->
    <Style Selector="TextBlock.label">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="#9AA0A6" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>

    <!--  Values  -->
    <Style Selector="TextBlock.value">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!--  Monospace  -->
    <Style Selector="TextBlock.monospace">
        <Setter Property="FontFamily" Value="JetBrains Mono, Monospace" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!--  Separator  -->
    <Style Selector="Border.separator">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="#2E2E2E" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <!--  Buttons  -->
    <Style Selector="StackPanel.properties-buttons">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="0,12,0,0" />
        <Setter Property="Spacing" Value="8" />
    </Style>

    <Style Selector="Button.primary-button">
        <Setter Property="Padding" Value="14,6" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

</Styles>