<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="Rectangle">
        <Setter Property="Fill" Value="{DynamicResource SecondaryColor}" />
    </Style>

    <Style Selector="TextBox.TopTextBox">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Background" Value="{DynamicResource TextBoxColor}" />
        <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="MinWidth" Value="1" />
    </Style>

    <Style Selector="TextBlock.TopColon">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Margin" Value="3" />
    </Style>

    <Style Selector="TextBlock.TopArrow">
        <Setter Property="FontFamily" Value="{StaticResource IconFont}" />
        <Setter Property="Foreground" Value="{DynamicResource IconColor}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="23" />
    </Style>

    <Style Selector="TextBlock.SyncEventsLabel">
        <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="25 25 0 -22" />
    </Style>

    <Style Selector="Border.SyncEventsBorder">
        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Margin" Value="25" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style Selector="CheckBox.SyncCheckBox">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
        <Setter Property="Margin" Value="20 0 0 0" />
    </Style>

    <Style Selector="Button.SyncButton">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
        <Setter Property="Background" Value="{DynamicResource TextBoxColor}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Width" Value="90" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Margin" Value="0 0 20 0" />
    </Style>

    <Style Selector="Button.SyncButton:pointer-over">
        <Setter Property="Background" Value="{DynamicResource PrimaryColor}" />
    </Style>

</Styles>
